  "main": "src/javascripts/index.js",
  "browser": "src/javascripts",
  "browserslist": [
    "extends @nice-digital/browserslist-config"
  ],
  "scripts": {
    "start": "grunt --color --timing",
    "dist": "grunt dist --color",
    "// JAVASCRIPT": "",
    "webpack": "SET \"NODE_ENV=production\" && webpack --progress --colors --display-error-details",
    "// TESTS": "",
    "test": "mocha src/**/*.test.js test/**/*.spec.js --require babel-core/register --require mocha-clean --require test/_setup.js --color",
    "test:watch": "mocha src/**/*.test.js test/**/*.spec.js --require babel-core/register --require mocha-clean --require test/_setup.js --reporter min --watch --color",
    "test:coverage": "node ./node_modules/istanbul/lib/cli cover node_modules/mocha/bin/_mocha -- --compilers js:babel-register --require mocha-clean --require test/_setup.js src/**/*.test.js test/**/*.spec.js --color",
    "// LINTING": "",
    "lint": "grunt lint --color",
    "// RELEASE": "",
    "release": "grunt release-it --color",
    "release:minor": "grunt release-it:minor --color"
  },
  "config": {
    "//": "Banner is used for prepending to compiled JS and CSS",
    "banner": "NICE Design System ${ version } | ${ date }\nÂ© Copyright NICE 2015-${ year }\nLicensed under MIT (https://github.com/nhsevidence/nice-design-system/blob/master/LICENSE)"
  },

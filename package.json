{
  "name": "@nice-digital/design-system",
  "version": "0.3.0",
  "description": "Your source for creating beautiful, consistent experiences across NICE",
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web",
    "nice",
    "nhs"
